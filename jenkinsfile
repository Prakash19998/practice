pipeline {
    agent any // This specifies that the pipeline will run on any available agent

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the code from the repository...'
                checkout scm // This checks out the code from the configured repository
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
              
            }
        }
        stage('testing') {
            steps {
                input ('do you want to continue?')
              
            }
        }
        stage('Done') {
            steps {
                echo 'thanks'
              
            }
        }
     post {
        success {
            echo 'Build was successful!'
            // Send success email or notification
        }
        failure {
            echo 'Build failed!'
            // Send failure email or notification
       
    }
}

}
