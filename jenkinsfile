pipeline {
    agent any // This specifies that the pipeline will run on any available agent

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the code from the repository...'
                checkout scm // This checks out the code from the configured repository
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // Add your build command here (e.g., Maven, Gradle)
                sh 'echo "Building the project..."' // Replace with actual build command
            }
        }

       
    }
}
