pipeline {
    agent any // This specifies that the pipeline will run on any available agent

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out the code from the repository...'
                checkout scm // This checks out the code from the configured repository
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // Add your build command here (e.g., Maven, Gradle)
                sh 'echo "Building the project..."' // Replace with actual build command
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Add your test command here
                sh 'echo "Running tests..."' // Replace with actual test command
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Add your deployment command here
                sh 'echo "Deploying the project..."' // Replace with actual deployment command
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
